<% content_for :title, t('settings.title') %>
<div class="py-10">
  <div class="">
    <h1><%= t('workspaces.workspace_settings') %></h1>
    <p class="text-base opacity-80 mt-2"><%= t('workspaces.workspace_description') %></p>
  </div>

  <div class="mt-10 flex flex-col gap-y-12">

    <div>
      <div class="flex items-center gap-x-2 text-xl">
        <i class="iconoir-globe text-primary"></i>
        <h2 class=""><%= t('common.workspace') %></h2>
      </div>
      <div class="w-ful h-px bg-base-300 mt-2 mb-4"></div>
      <div class="grid grid-cols-3 gap-x-4 gap-y-8">
        <%= render "shared/setting_card",
                   path: edit_settings_general_path,
                   title: t('settings.general'),
                   description: t('settings.page_general_info'),
                   button_title: t('buttons.configure_settings'),
                   icon: 'iconoir-settings'
        %>
      </div>
    </div>

  </div>
</div>
