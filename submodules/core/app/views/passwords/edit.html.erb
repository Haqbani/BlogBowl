<% content_for :title, t('auth.change_password') %>
<p style="color: red"><%= alert %></p>

<h1><%= t('auth.change_password') %></h1>

<%= form_with(url: password_path, method: :patch) do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, t('errors.messages.required')) %> <%= t('errors.messages.invalid') %>:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :password_challenge, t('auth.current_password'), style: "display: block" %>
    <%= form.password_field :password_challenge, required: true, autofocus: true, autocomplete: "current-password" %>
  </div>

  <div>
    <%= form.label :password, t('auth.new_password'), style: "display: block" %>
    <%= form.password_field :password, required: true, autocomplete: "new-password" %>
    <div>12 <%= t('errors.messages.too_short', count: 12) %>.</div>
  </div>

  <div>
    <%= form.label :password_confirmation, t('auth.password_confirmation'), style: "display: block" %>
    <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password" %>
  </div>

  <div>
    <%= form.submit t('common.save') %>
  </div>
<% end %>

<br>

<div>
  <%= link_to t('common.back'), root_path %>
</div>
