<header class="border-b fixed top-0 inset-x-0 z-20 bg-base-100">
  <div class="navbar max-w-7xl mx-auto px-5 md:px-0 py-1">
    <div class="navbar-start <%= 'flex-row-reverse' if @workspace_settings.html_lang.start_with?('ar') %>">
      <a class="text-2xl" href='<%= @page_settings.logo_link&.presence || dynamic_prefix('/') %>'>
        <% if @page_settings.logo.attached? %>
          <%= image_tag @page_settings.logo, class: "h-10 object-contain", alt: @page_settings.logo_text %>
        <% else %>
          <%= @page_settings.logo_text %>
        <% end %>
      </a>
    </div>
    <div class="navbar-center hidden lg:flex">
      <ul class="menu menu-horizontal px-1 ltr:gap-x-1 rtl:gap-x-1">
        <% @navbar_links.each do |link| %>
          <li><a class="font-medium text-base opacity-70" href="<%= link.url %>"><%= link.title %></a></li>
        <% end %>
      </ul>
    </div>
    <div class="navbar-end ltr:gap-x-2 rtl:gap-x-2 <%= 'flex-row-reverse' if @workspace_settings.html_lang.start_with?('ar') %>">
      <%= render "layouts/public/shared/search_modal" %>
      <div class="dropdown <%= @workspace_settings.html_lang.start_with?('ar') ? 'dropdown-start' : 'dropdown-end' %>">
        <div tabindex="0" role="button" class="btn btn-square md:hidden">
          <i class="iconoir-menu text-xl"></i>
        </div>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow gap-y-2">
          <% @navbar_links.each do |link| %>
            <li><a class="font-medium text-base opacity-70" href="<%= link.url %>"><%= link.title %></a></li>
          <% end %>
          <li>
            <a class="btn btn-primary" target="_blank" href="<%= @page_settings.header_cta_button_link.present? ?  @page_settings.header_cta_button_link : '#' %>"><%=  @page_settings.header_cta_button.present? ? @page_settings.header_cta_button : 'CTA button' %></a>
          </li>
        </ul>
      </div>
      <a class="btn btn-primary hidden md:flex" target="_blank" href="<%= @page_settings.header_cta_button_link.present? ?  @page_settings.header_cta_button_link : '#' %>"><%=  @page_settings.header_cta_button.present? ? @page_settings.header_cta_button : 'CTA button' %></a>
    </div>
  </div>

  <%= render "layouts/public/shared/progress-bar" %>
</header>
