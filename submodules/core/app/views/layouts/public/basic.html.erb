<!DOCTYPE html>
<html lang="<%= @workspace_settings.html_lang %>" dir="<%= @workspace_settings.html_lang.start_with?('ar') ? 'rtl' : 'ltr' %>">

<%= render "layouts/public/shared/head" %>

<body>
<header class="bg-primary">
  <div class="flex items-center justify-between py-3 max-w-7xl mx-auto">
    <p class="text-3xl font-bold text-white"><%= @page_settings.name %></p>
    <nav class="flex items-center">
      <ul class="flex items-center gap-x-5">
        <% @navbar_links.each do |link| %>
          <li><a class="text-gray-200 font-medium text-lg hover:text-white" href="<%= link.url %>"><%= link.title %></a>
          </li>
        <% end %>
      </ul>
    </nav>
    <div class="flex items-center ml-7">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white">
        <path d="M21 21L17.364 17.364M17.364 17.364C18.9926 15.7353 20 13.4853 20 11C20 6.02944 15.9706 2 11 2C6.02944 2 2 6.02944 2 11C2 15.9706 6.02944 20 11 20C13.4853 20 15.7353 18.9926 17.364 17.364Z" stroke-width="1.5" stroke-linecap="round"></path>
      </svg>
      <button class="px-4 py-1 bg-blue-500 text-white rounded font-bold ml-2 hover:opacity-70 active:opacity-60">
        Start trial
      </button>
    </div>
  </div>
  <%= render "layouts/public/shared/progress-bar" %>
</header>
<main class="pb-24">
  <%= yield %>
  <%= @page_settings.body_html&.html_safe %>
</main>
<footer class="bg-black py-5">
  <div class="flex flex-col items-center justify-center py-3 max-w-7xl mx-auto ">
    <p class="text-white text-2xl"><%= @page_settings.name %></p>
    <nav class="flex items-center mt-10">
      <ul class="flex items-center gap-x-5">
        <% @footer_links.each do |link| %>
          <li><a class="text-gray-200 font-medium text-lg hover:text-white" href="<%= link.url %>"><%= link.title %></a>
          </li>
        <% end %>
      </ul>
    </nav>
    <div class="flex items-center mt-5 text-white gap-x-4">
      <% @social_media_links.each do |link| %>
        <a class="hover:opacity-70 active:opacity-60" href="<%= link.url %>" target="_blank" rel="noopener noreferrer">
          <i class="<%= social_media_icon(link.title) %> text-xl"></i>
        </a>
      <% end %>
    </div>
    <% if @page_settings.copyright?.present? %>
      <p class="text-white text-xs mt-5"><%= @page_settings.copyright %></p>
    <% end %>
  </div>
</footer>
</body>
</html>
